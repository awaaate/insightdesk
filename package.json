{
  "name": "app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -e .env -- turbo dev",
    "build": "dotenv -e .env -- turbo build",
    "deploy": "dotenv -e .env -- turbo build && bun run start:server",
    "start:server": "dotenv -e .env -- turbo -F server start",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "clean": "turbo clean"
  },
  "dependencies": {
    "framer-motion": "^12.23.12"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "turbo": "^2.5.4"
  },
  "packageManager": "bun@1.2.19"
}